<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinate_root"
    android:orientation="vertical"
    tools:context=".codelabs.core.toast.ToastSnakeFragment">

    <ImageView
        android:id="@+id/btn_toast"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_snake"/>

    <ImageView
        android:id="@+id/btn_snake"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_snake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_toast"
        app:layout_constraintBottom_toTopOf="@id/btn_snake_action"/>

    <ImageView
        android:id="@+id/btn_snake_action"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_snake_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_snake"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>